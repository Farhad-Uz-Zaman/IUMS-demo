<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6C290"
    android:orientation="horizontal"
    tools:context=".HomeActivity">



<RelativeLayout
    android:id="@+id/sideRelative"
    android:background="#E74E4E"
    android:layout_width="130dp"
    android:layout_height="match_parent">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:src="@drawable/austlogo"

    />


    <Button
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_above="@+id/result"
        android:layout_height="40dp"
        android:text="Profile"
        android:textColor="#000000"

        android:onClick="Profile"
        android:background="@drawable/custom_edit_text_cp"


        />

    <Button
        android:id="@+id/result"
        android:layout_centerVertical="true"
        android:text="Result"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:onClick="Result"
        android:background="@drawable/custom_edit_text_cp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"

        />

    <Button
        android:id="@+id/payments"
        android:layout_below="@+id/result"
        android:text="PAYMENTS"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:onClick="Payments"
        android:background="@drawable/custom_edit_text_cp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"

        />

    <Button
        android:id="@+id/semfee"
        android:layout_below="@+id/payments"
        android:text="Semester Fee"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:onClick="SemFee"
        android:background="@drawable/custom_edit_text_cp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"

        />





    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="2dp"
        android:onClick="Logout"
        android:text="LogOut"
        android:background="@drawable/custom_edit_text_cp"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        />


</RelativeLayout>

    <FrameLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"

        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            />



    </FrameLayout>



</LinearLayout>